# MLTrack Environment Configuration
# Copy this file to .env and update with your actual values

# ===========================================
# LLM API KEYS
# ===========================================

# OpenAI API Key
OPENAI_API_KEY=your-openai-api-key-here

# Anthropic API Key
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# ===========================================
# MLFLOW CONFIGURATION
# ===========================================

# MLflow Tracking URI
MLFLOW_TRACKING_URI=http://localhost:5001

# MLflow Artifact Root
MLFLOW_ARTIFACT_ROOT=./mlruns

# ===========================================
# MODAL CONFIGURATION
# ===========================================

# Modal Authentication
# Get your Modal tokens from: https://modal.com/settings/tokens
MODAL_TOKEN_ID=your_modal_token_id_here
MODAL_TOKEN_SECRET=your_modal_token_secret_here

# Modal Workspace (optional)
# MODAL_USERNAME=your_modal_username
# MODAL_WORKSPACE=your_modal_workspace

# ===========================================
# AWS CONFIGURATION (for S3 model storage)
# ===========================================

# AWS Credentials - Required for Modal deployments
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here
AWS_DEFAULT_REGION=us-east-1

# S3 Bucket for model storage
MLTRACK_S3_BUCKET=mltrack-models

# ===========================================
# UI CONFIGURATION
# ===========================================

# Next.js API URL
NEXT_PUBLIC_API_URL=http://localhost:3000

# MLflow UI URL
NEXT_PUBLIC_MLFLOW_URL=http://localhost:5001

# ===========================================
# TEAM SETTINGS
# ===========================================

# Team settings (optional)
# MLTRACK_TEAM_NAME=my-team

# ===========================================
# DEVELOPMENT SETTINGS
# ===========================================

# Node environment
NODE_ENV=development

# Python path (for local development)
PYTHONPATH=./src:$PYTHONPATH